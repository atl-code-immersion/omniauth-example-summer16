<div id="user-widget">
	<% if current_user %>
		<p>Welcome, <strong><%= current_user.name %></strong>!</p>
		<% if current_user.provider == "facebook" %>
    	<%= image_tag(current_user.normalimage) %><br />
    <% else %>
    	<%= image_tag current_user.image, class: "profile-image" %><br />
    <% end %>
    <p><%= link_to "Sign Out", signout_path, id: "sign_out" %></p>
  <% else %>
  	<p><%= link_to "Sign In With Facebook", "/auth/facebook", id: "sign_in" %></p>
  	<p><%= link_to "Sign In With GitHub", "/auth/github" %></p>
  <% end %>
</div>